<h2>Create a movie</h2>
<form action="/movies/create" method="post">
    <label for="">Title: <input type="text" name="title" id=""></label>
    <label for="">Genre: <input type="text" name="genre" id=""></label>
    <label for="">Plot: <input type="text" name="plot" id=""></label>
    <label for="">Cast: <select name="cast" id="">
        <% celebData.forEach(eachCeleb => { %>
            <option value="<%= eachCeleb._id %>"><%= eachCeleb.name %></option>
        <% }) %>
    </select></label>
    <button type="submit">Create movie!</button>
</form>